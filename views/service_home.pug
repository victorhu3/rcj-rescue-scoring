//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'Home'

append scripts
  script(src='/javascripts/home.js')
  script.
    navigator.serviceWorker.getRegistrations().then(function(registrations) {
    for(let registration of registrations) {
    registration.unregister()
    } })
  //script.
    if ('serviceWorker' in navigator) {
      self.addEventListener('load', function() {
        navigator.serviceWorker.register('/sw.js');
      });
      self.addEventListener('install', function (event) {
        event.waitUntil(self.skipWaiting());
      });
      self.addEventListener('activate', function (event) {
        event.waitUntil(self.clients.claim());
      });
    }

block location
  span.breadcrumb-item.active Home

block content
  .row
    .col-md-1
    .col-md-10
      h2
          img(src="/images/logo.png" width='40px' height='40px')
          | &nbsp;RCJ Scoring System 2020
      br
      h6(ng-cloak) {{'service_home.about' | translate}}
      br
      br
      .row.row-height(style="display: flex;justify-content: space-between;")
        .col-md-6(style="margin-bottom:20px;")
          .card(ng-click="go('/service/editor/line/2020')" style="width:100%;height:100%;text-align:center;")
            img.card-img-top(ng-src="/images/lineEditor.png", alt='' style="max-height:300px;width:100%;object-fit: contain;")
            .card-body
              h3(style="text-align:center" ng-cloak) Line Map Editor 2020
        .col-md-6(style="margin-bottom:20px;")
          .card(ng-click="go('/service/editor/maze/2020')" style="width:100%;height:100%;text-align:center;")
            img.card-img-top(ng-src="/images/mazeEditor.png", alt='' style="max-height:300px;width:100%;object-fit: contain;")
            .card-body
              h3(style="text-align:center" ng-cloak) Maze Map Editor 2020
